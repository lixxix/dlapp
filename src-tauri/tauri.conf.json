{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "下载助手",
  "version": "0.1.0",
  "identifier": "com.application.dlapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "下载助手",
        "width": 1100,
        "height": 950,
        "minWidth": 1000,
        "minHeight": 800,
        "dragDropEnabled": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },   
  "bundle": {
    "active": true,
    "targets": "msi",
    "externalBin":[
      "./bin/aria2c"
    ],
  
    "resources":[],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      
      "wix": {
        "language": "zh-CN"
      }
     
    },
    "createUpdaterArtifacts":true
  },
  "plugins": {
    "updater": {
      "pubkey": "public key",
      "endpoints": [
        "https://your_website.com"
      ],
      "windows": { 
        "installMode": "passive"
      }
    }
  }
}
